# ===== APP CONFIGURATION =====
PORT=5000
NODE_ENV=development

# ===== DATABASE CONFIGURATION =====
# Local example:
# mongodb://localhost:27017/giftshop
# Docker example:
# mongodb://mongodb:27017/giftshop
MONGO_URI=
MONGODB_URI=

# ===== JWT CONFIGURATION =====
JWT_SECRET=
JWT_EXPIRES_IN=7d

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:5000
FRONTEND_API_URL=/api

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# ===== EMAIL SETTINGS =====
FORCE_REAL_EMAILS=true
EMAIL_VERIFICATION_SUBJECT=Verify Your Account
EMAIL_VERIFICATION_EXPIRY_HOURS=24
EMAIL_RESET_SUBJECT=Password Reset Request

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
